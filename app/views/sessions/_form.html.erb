<div class="form-group">
  <%= form_tag login_path do %>
    <%= email_field_tag :email, nil, placeholder: 'Email', class: 'form-control width-50' %>
    <br>
    <%= password_field_tag :password, nil, placeholder: 'Password', class: 'form-control width-50' %>
    <br>
    <%= submit_tag 'Sign in', class: 'btn btn-default' %>
  <% end %>
</div>