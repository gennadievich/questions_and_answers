<% unless current_user %>
  <div class="col-md-offset-3 col-md-6">
    <ul class="nav nav-tabs authentication">
      <li class="item"><%= link_to "Register", register_path %></li>
      <li class="item"><%= link_to "Log In", login_path %></li>
    </ul>
  </div>
<% end %>

<% if current_user && current_user.admin? %>
  <div class="col-md-offset-3 col-md-6">
    <ul class="nav nav-tabs admin">
      <li class="item"><%= link_to "Users", users_path %></li>
      <li class="item"><%= link_to "Questions", questions_path %></li>
      <li class="item"><%= link_to "Categories", categories_path %></li>
    </ul>
  </div>
  <br>
  <br>
<% end %>

<% if current_user && !current_user.admin? %>
  <div class="col-md-offset-3 col-md-6">
    <ul class="nav nav-tabs admin">
      <li class="item"><%= link_to "All Q", questions_path %></li>
      <li class="item"><%= link_to "Answered", answered_questions_path %></li>
      <li class="item"><%= link_to "Pending", not_answered_questions_path %></li>
    </ul>
  </div>
  <br>
  <br>
<% end %>