<div class="col-md-offset-3 col-md-6">
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name, placeholder: "Name", class: "form-control width-80", autofocus: true %>
  </div>
  <div class="field">
    <%= f.text_field :email, placeholder: "Email", class: "form-control width-80" %>
  </div>
  <div class="field">
    <%= f.password_field :password, placeholder: "Password", class: "form-control width-80" %>
  </div>
  <div>
    <%= f.password_field :password_confirmation, placeholder: "Password confirmation", class: "form-control width-80" %>
  </div>
  <div class="field">
    <%= f.select :role, User::ROLE, {}, {class: "form-control width-80"} %>
  </div>
  <div class="form-control width-80">
    <%= f.check_box :active %> Active
  </div>
  <div class="field">
    <%= f.select :status, User::STATUS, {}, {class: "form-control width-80"} %>
  </div>
  <div class="actions">
    <%= f.submit nil, class: "btn btn-default width-80" %>
  </div>
<% end %>
</div>
