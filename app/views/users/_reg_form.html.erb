<div class="col-md-offset-3 col-md-6">
  <%= form_for(@user) do |f| %>
    <div>
      <%= f.text_field :name, placeholder: "Name", class: "form-control width-80", autofocus: true %>
    </div>

    <div>
      <%= f.email_field :email, placeholder: "Email", class: "form-control width-80"%>
    </div>

    <div>
      <%= f.password_field :password, placeholder: "Password", class: "form-control width-80", autocomplete: "off" %>
    </div>

    <div>
      <%= f.password_field :password_confirmation, placeholder: "Password confirmation", class: "form-control width-80", autocomplete: "off" %>
    </div>

    <div>
      <%= f.submit "Sign up", class: "btn btn-default width-80" %>
    </div>
  <% end %>
</div>