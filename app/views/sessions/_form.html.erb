<div class="col-md-offset-3 col-md-6">
  <%= form_tag login_path do %>
    <div>
      <%= email_field_tag :email, nil, placeholder: "Email", class: "form-control width-80", autofocus: true %>
    </div>

    <div>
      <%= password_field_tag :password, nil, placeholder: "Password", class: "form-control width-80", autocomplete: "off" %>
    </div>

    <div>
      <%= submit_tag "Log in", class: "btn btn-default width-80" %>
    </div>
  <% end %>

</div>